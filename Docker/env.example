# =============================================================================
# ScholarAI Platform - Docker Environment Configuration
# =============================================================================
# This file contains all environment variables needed for Docker deployment
# Copy this file to .env and fill in the actual values
# 
# IMPORTANT: Never commit actual secrets to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL databases for each microservice

# User Service Database
USER_DB_PORT=5433
USER_DB_USER=your_user_db_username
USER_DB_PASSWORD=your_secure_user_db_password

# Notification Service Database  
NOTIFICATION_DB_PORT=5434
NOTIFICATION_DB_USER=your_notification_db_username
NOTIFICATION_DB_PASSWORD=your_secure_notification_db_password

# Project Service Database
PROJECT_DB_PORT=5435
PROJECT_DB_USER=your_project_db_username
PROJECT_DB_PASSWORD=your_secure_project_db_password

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Message broker for inter-service communication

# User Service RabbitMQ
USER_RABBITMQ_AMQP_PORT=5672
USER_RABBITMQ_MANAGEMENT_PORT=15672
USER_RABBITMQ_USER=your_rabbitmq_username
USER_RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# General RabbitMQ (for other services)
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# In-memory data store for caching and sessions

# User Service Redis
USER_REDIS_PORT=6379
USER_REDIS_PASSWORD=your_secure_redis_password

# General Redis
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# SERVICE HOSTS (Docker internal networking)
# =============================================================================
# Host names for service-to-service communication within Docker network

REDIS_HOST=user-redis
RABBITMQ_HOST=user-rabbitmq

# =============================================================================
# EUREKA SERVICE REGISTRY
# =============================================================================
# Service discovery configuration

EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://service-registry:8761/eureka/

# =============================================================================
# EXTERNAL APIS AND INTEGRATIONS
# =============================================================================

# Google OAuth Configuration
SPRING_GOOGLE_CLIENT_ID=your_google_oauth_client_id
SPRING_GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# GitHub OAuth Configuration  
SPRING_GITHUB_CLIENT_ID=your_github_oauth_client_id
SPRING_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Gemini AI Configuration (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (for notifications)
GMAIL_ADDRESS=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Cloudinary Configuration (for image management)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# =============================================================================
# BACKBLAZE B2 CLOUD STORAGE
# =============================================================================
# File storage for documents and papers

B2_ENDPOINT=https://s3.ams5.backblazeb2.com
B2_KEY_ID=your_backblaze_key_id
B2_APPLICATION_KEY=your_backblaze_application_key
B2_BUCKET_NAME=your_bucket_name
B2_BUCKET_ID=your_bucket_id
PUBLIC_CDN_BASE=https://your-bucket.s3.ams5.backblazeb2.com

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
# JSON Web Token configuration for authentication

JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_ACCESS_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# =============================================================================
# DEFAULT USER CREDENTIALS
# =============================================================================
# Default admin user for initial setup

USER_NAME=admin
USER_PASSWORD=your_secure_admin_password

# =============================================================================
# FASTAPI SERVICE (for document processing)
# =============================================================================

FASTAPI_URL=http://your-fastapi-service:8000

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Spring Profile (docker for Docker deployment)
SPRING_PROFILE=docker

# Application Environment
NEXT_PUBLIC_ENV=docker

# API URLs for frontend
NEXT_PUBLIC_DEV_API_URL=http://localhost:8989
NEXT_PUBLIC_DOCKER_BACKEND_URL=http://localhost:8989
NEXT_PUBLIC_API_BASE_URL=http://localhost:8989

# Frontend OAuth client IDs (public)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_client_id
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
