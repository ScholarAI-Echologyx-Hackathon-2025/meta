# =============================================================================
# ScholarAI Platform - Main Repository Environment Configuration
# =============================================================================
# This file contains environment variables for the entire ScholarAI platform
# Copy this file to .env and fill in the actual values
# 
# This is the master environment file that can be used to configure
# all services at once for development purposes
# =============================================================================

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Overall platform environment (dev, staging, prod)
ENVIRONMENT=dev

# Platform version
PLATFORM_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL databases for all microservices

# User Service Database
USER_DB_HOST=localhost
USER_DB_PORT=5433
USER_DB_NAME=userDB
USER_DB_USER=scholarai_user
USER_DB_PASSWORD=your_secure_user_db_password

# Project Service Database
PROJECT_DB_HOST=localhost
PROJECT_DB_PORT=5435
PROJECT_DB_NAME=projectDB
PROJECT_DB_USER=scholarai_project
PROJECT_DB_PASSWORD=your_secure_project_db_password

# Notification Service Database
NOTIFICATION_DB_HOST=localhost
NOTIFICATION_DB_PORT=5434
NOTIFICATION_DB_NAME=notificationDB
NOTIFICATION_DB_USER=scholarai_notification
NOTIFICATION_DB_PASSWORD=your_secure_notification_db_password

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
# RabbitMQ for inter-service communication

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=scholarai_rabbitmq
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis for caching and sessions

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# SERVICE REGISTRY
# =============================================================================
# Eureka service discovery

EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/

# =============================================================================
# API GATEWAY
# =============================================================================
# Gateway configuration

API_GATEWAY_HOST=localhost
API_GATEWAY_PORT=8989

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
# Port configuration for all microservices

USER_SERVICE_PORT=8081
PROJECT_SERVICE_PORT=8083
NOTIFICATION_SERVICE_PORT=8082
FRONTEND_PORT=3000

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_256_bits_recommended
JWT_ACCESS_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Default admin user
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@scholarai.com

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Document Processing
FASTAPI_URL=http://localhost:8000

# =============================================================================
# CLOUD STORAGE
# =============================================================================
# Backblaze B2 for document storage
B2_ENDPOINT=https://s3.ams5.backblazeb2.com
B2_KEY_ID=your_backblaze_key_id
B2_APPLICATION_KEY=your_backblaze_application_key
B2_BUCKET_NAME=scholarai-documents
B2_BUCKET_ID=your_bucket_id
PUBLIC_CDN_BASE=https://scholarai-documents.s3.ams5.backblazeb2.com

# Cloudinary for image management
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Gmail SMTP for notifications
GMAIL_ADDRESS=noreply@scholarai.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Email settings
EMAIL_FROM_NAME=ScholarAI Platform
EMAIL_REPLY_TO=noreply@scholarai.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Next.js frontend settings
NEXT_PUBLIC_ENV=dev
NEXT_PUBLIC_API_BASE_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/api/ws
NEXT_PUBLIC_DEV_API_URL=http://localhost:8989
NEXT_PUBLIC_DOCKER_BACKEND_URL=http://localhost/api

# Public OAuth client IDs (safe to expose)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_client_id
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Application monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_HEALTH_CHECKS=true

# Log levels
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APPLICATION=DEBUG

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific configurations
DEBUG_MODE=true
HOT_RELOAD_ENABLED=true
MOCK_EXTERNAL_APIS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Toggle platform features
ENABLE_CHAT_FEATURE=true
ENABLE_COLLABORATION=true
ENABLE_PDF_ANNOTATION=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_DOCUMENT_SHARING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Connection pools and timeouts
DB_CONNECTION_POOL_SIZE=10
HTTP_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# File upload limits
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_UPLOAD=10
